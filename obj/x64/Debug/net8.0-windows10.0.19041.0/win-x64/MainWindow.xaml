<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App_xddq.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="XDDQ Automation Tool">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar -->
        <StackPanel x:ConnectionId='2' x:Name="Sidebar" Background="#2D2D30" Width="60" Grid.Column="0">
            <!-- Hamburger Button -->
            <Button x:ConnectionId='4' x:Name="HamburgerButton"                               Width="60" Height="60" Background="Transparent">
                <FontIcon Glyph="&#xE700;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="White"/>
            </Button>
            <!-- Navigation Items -->
            <StackPanel x:ConnectionId='5' x:Name="NavItemsPanel" Margin="0,20,0,0">
                <Button x:ConnectionId='7' x:Name="HomeNav"                       Background="Transparent" Height="48">
                    <FontIcon Glyph="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"/>
                </Button>
                <Button x:ConnectionId='8' x:Name="FeatureNav"                          Background="Transparent" Height="48">
                    <FontIcon Glyph="&#xE7EF;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"/>
                </Button>
                <Button x:ConnectionId='9' x:Name="ConfigNav"                         Background="Transparent" Height="48">
                    <FontIcon Glyph="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"/>
                </Button>
                <Button x:ConnectionId='10' x:Name="LogNav"                      Background="Transparent" Height="48">
                    <FontIcon Glyph="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"/>
                </Button>
                <Button x:ConnectionId='11' x:Name="AboutNav"                        Background="Transparent" Height="48">
                    <FontIcon Glyph="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"/>
                </Button>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,10">
                <Button x:ConnectionId='6' x:Name="SettingsNav"                           Background="Transparent" Height="48">
                    <FontIcon Glyph="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"/>
                </Button>
            </StackPanel>
        </StackPanel>
        <!-- Main Content -->
        <Frame x:ConnectionId='3' x:Name="MainFrame" Grid.Column="1"/>
    </Grid>
</Window>

