<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App_xddq.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="XDDQ Automation Tool">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar -->
        <Grid x:Name="Sidebar" Background="#2D2D30" Width="56" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- App title area -->
            <StackPanel Orientation="Horizontal" Height="56" VerticalAlignment="Center" Margin="6,0,0,0" Grid.Row="0">
                <TextBlock Text="XDDQ" Foreground="White" VerticalAlignment="Center" FontSize="12" FontWeight="Bold" />
            </StackPanel>
            <!-- Navigation Items -->
            <StackPanel x:Name="NavItemsPanel" Margin="0,6,0,0" Grid.Row="1" HorizontalAlignment="Center">
                <Button x:Name="HomeNav" Click="HomeNav_Click" Background="Transparent" Height="72" Width="56" HorizontalContentAlignment="Center" PointerEntered="NavButton_PointerEntered" PointerExited="NavButton_PointerExited" PointerPressed="NavButton_PointerPressed" PointerReleased="NavButton_PointerReleased">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon x:Name="HomeIcon" Glyph="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="HomeLabel" Text="首页" FontSize="10" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="FeatureNav" Click="FeatureNav_Click" Background="Transparent" Height="72" Width="56" HorizontalContentAlignment="Center" PointerEntered="NavButton_PointerEntered" PointerExited="NavButton_PointerExited" PointerPressed="NavButton_PointerPressed" PointerReleased="NavButton_PointerReleased">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon x:Name="FeatureIcon" Glyph="&#xE7EF;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="FeatureLabel" Text="功能" FontSize="10" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ConfigNav" Click="ConfigNav_Click" Background="Transparent" Height="72" Width="56" HorizontalContentAlignment="Center" PointerEntered="NavButton_PointerEntered" PointerExited="NavButton_PointerExited" PointerPressed="NavButton_PointerPressed" PointerReleased="NavButton_PointerReleased">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon x:Name="ConfigIcon" Glyph="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ConfigLabel" Text="配置" FontSize="10" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="LogNav" Click="LogNav_Click" Background="Transparent" Height="72" Width="56" HorizontalContentAlignment="Center" PointerEntered="NavButton_PointerEntered" PointerExited="NavButton_PointerExited" PointerPressed="NavButton_PointerPressed" PointerReleased="NavButton_PointerReleased">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon x:Name="LogIcon" Glyph="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LogLabel" Text="日志" FontSize="10" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="2" Margin="0,0,0,6" HorizontalAlignment="Center">
                <Button x:Name="AboutNav" Click="AboutNav_Click" Background="Transparent" Height="72" Width="56" HorizontalContentAlignment="Center" PointerEntered="NavButton_PointerEntered" PointerExited="NavButton_PointerExited" PointerPressed="NavButton_PointerPressed" PointerReleased="NavButton_PointerReleased">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon x:Name="AboutIcon" Glyph="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="AboutLabel" Text="关于" FontSize="10" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SettingsNav" Click="SettingsNav_Click" Background="Transparent" Height="72" Width="56" HorizontalContentAlignment="Center" PointerEntered="NavButton_PointerEntered" PointerExited="NavButton_PointerExited" PointerPressed="NavButton_PointerPressed" PointerReleased="NavButton_PointerReleased">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon x:Name="SettingsIcon" Glyph="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="SettingsLabel" Text="设置" FontSize="10" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Main Content -->
        <Frame x:Name="MainFrame" Grid.Column="1"/>

        <!-- Account button in top-right overlay -->
        <Grid Grid.ColumnSpan="2" IsHitTestVisible="True">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,12,0">
                <Button x:Name="AccountButton" Click="AccountButton_Click" Width="36" Height="36" Background="Transparent">
                    <FontIcon Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Toast host overlay (top-right) -->
        <Grid x:Name="ToastHost" Grid.ColumnSpan="2" IsHitTestVisible="False" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" />
    </Grid>
</Window>
